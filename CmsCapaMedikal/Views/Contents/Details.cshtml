@model Contents

<h1>İçerik Detay Paneli</h1>

<div>
    <dl class="row">
        <div class="col-6">
            <h4>Özellikleri</h4>
            <hr />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContentTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContentTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContentDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContentDescription)
            </dd>
        </div>
        <div class="col-4">
            <h4>Resim</h4>
            <hr />
            <img src="/Images/@Model.ContentImage" height="250" width="250" />
        </div>
    </dl>
</div>
<a class="btn btn-secondary" asp-controller="Contents" asp-action="List">Geri</a>