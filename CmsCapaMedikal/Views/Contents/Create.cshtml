@model Contents
@{
    var catlist = ViewBag.CategoryList;
}
<h1>İçerik Kaydetme Paneli</h1>

<div class="row">
    <div class="col-4">
        <form asp-controller="Contents" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="contentsTitle">İçerik Başlık:</label>
                <input asp-for="ContentTitle" type="text" class="form-control" id="contentsTitle" required>
            </div>
            <div class="form-group">
                <label for="contentsDescription">İçerik Açıklama:</label>
                <input asp-for="ContentDescription" type="text" class="form-control" id="contentsDescription" required>
            </div>
            <div class="custom-file mb-3">
                <input asp-for="ContentFile" type="file" class="custom-file-input" id="validatedContentFile" required>
                <label asp-for="ContentFile" class="custom-file-label" for="validatedContentFile">Resim seçiniz...</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>
