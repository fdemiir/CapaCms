            <hr />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductArea)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductArea)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductClass)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductBottomBrand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductBottomBrand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductCategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductCategoryName)
            </dd>
        </div>
        <div class="col-4">
            <h4>Resim</h4>
            <hr />
            <img src="/Images/@Model.ProductImage" height="250" width="250" />
        </div>
