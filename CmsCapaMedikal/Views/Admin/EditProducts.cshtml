@model Products
@{
    ViewData["Title"] = "Edit Products";
    var categoryList = ViewBag.CategoryList;
    var productList = ViewBag.ProductList;
}
<h1>Ürün Kaydetme Paneli</h1>

@using (Html.BeginForm("SaveProducts", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td>Ürün Id: </td>
            <td>
                @Html.TextBoxFor(m => m.Id)
            </td>
        </tr>
        <tr>
            <td>Ürün Code: </td>
            <td>
                @Html.TextBoxFor(m => m.Code)
            </td>
        </tr>
        <tr>
            <td>Ürün Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>Ürün Area: </td>
            <td>
                @Html.TextBoxFor(m => m.Area)
            </td>
        </tr>
        <tr>
            <td>Ürün Class: </td>
            <td>
                @Html.TextBoxFor(m => m.Class)
            </td>
        </tr>
        <tr>
            <td>Ürün Type: </td>
            <td>
                @Html.TextBoxFor(m => m.Type)
            </td>
        </tr>
        <tr>
            <td>Ürün BottomBrand: </td>
            <td>
                @Html.TextBoxFor(m => m.BottomBrand)
            </td>
        </tr>
        <tr>
            <td>Ürün Image: </td>
            <td>
                <input type="file" name="file" />
            </td>
        </tr>
        <tr>
            <td>Kategori: </td>
            <td>
                @Html.DropDownListFor(model => model.CategoryId,
                new SelectList(categoryList, "Id", "CategoryName"), "Kategori seçiniz.")
            </td>
        </tr>
        @*<tr>
                <td>Resim: </td>
                <td>
                    <input type="file" name="file" />
                </td>
            </tr>*@
        <tr>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}



<table>
    <tr>
        <th>Ürün Id:</th>
        <th>Ürün Adı:</th>
        <th>Ürün Fotoğraf:</th>
    </tr>
    @foreach (var item in productList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><img src="~/Images/3M-1001.jpg" height="80" width="120" /></td>
        </tr>
    }
</table>