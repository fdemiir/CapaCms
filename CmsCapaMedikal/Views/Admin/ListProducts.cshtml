@model Products
@{
    ViewData["Title"] = "List Products";
    var model = Model;
    var prodList = ViewBag.ProductList;
}
<h1>Eklenen Ürünler</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Kullanım Alanı</th>
            <th>Kategori</th>
            <th>Fotoğraf</th>
        </tr>
    </thead>
    @foreach (var item in prodList)
    {
        var img = $"/Images/{item.Code}.jpg";

<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>@item.Area</td>
    <td>@item.CategoryName</td>
    <td><img src=@img height="80" width="120" /></td>
</tr>
    }
</table>